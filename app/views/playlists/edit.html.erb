<h1>Editing playlist</h1>

<%= render 'form' %>


   <strong>Songs:</strong>
  	<div class= "song-list">
  	<%= @playlist.songs.find_each do |song| %>
  		<tr>
  			<td> <em> name: </em> <%= song.name %> </td>
  			<td> <em> artist: </em> <%= song.artist %> </td>
  			<td> <em> album: </em><%= song.album %> </td>
  			<td><%= link_to 'Edit', edit_playlist_song_path(@playlist, song) %></td>
  			<td> <%= link_to 'Destroy', [@playlist, song], method: :delete, data: { confirm: 'Are you sure?' } %> </td>
  			<br>
  		</tr>
  	<% end %>
  </div>

<%= link_to 'Add New', add_song_path %> |
<%= link_to 'Show', @playlist %> |
<%= link_to 'Back', playlists_path %>
